#RUNTEST:

import sys
sys.dont_write_bytecode = True
sys.excepthook = sys.__excepthook__
import os
import re
import time

import testutils as util
optD,argL = util.initialize( sys.argv )
if 'TESTUTILS_RUNDIR' not in os.environ:
    os.chdir( util.working_directory )

from testutils import *

vvtestdir = os.path.dirname( os.path.dirname(util.test_filename) )
toolsdir = os.path.normpath( vvtestdir + '/..' )

import CommonSpec
import xmlwrapper
import cshScriptWriter
import TestSpecCreator
from RuntimeConfig import RuntimeConfig

xreader = xmlwrapper.XmlDocReader()

xdb = CommonSpec.CommonSpecDB()
xdoc = xreader.readDoc( os.path.join(vvtestdir, 'exeDB.xml') )
CommonSpec.scanCommonSpecs( xdoc, xdb )

class FakePlatform:
    def __init__(self): pass
    def getName(self): return "fakeplatform"
    def getCompiler(self): return "fakecompiler"
    def getEnvironment(self):
        D = { 'ENVAR':'envarval' }
        return D

plat = FakePlatform()

if not os.path.exists('tdir'):
  os.mkdir( 'tdir' )
testdir = os.path.abspath( 'tdir' )

rmallfiles()

print ( "1111111111111111111111111111111111111" )

fp = open('t1.xml',"w")
fp.writelines( [
     '<rtest name="atest">\n',
     '  <execute name="exename"> echo "hello world" </execute>\n',
     '</rtest>\n' ] )
fp.close()
tL = TestSpecCreator.createTestObjects( '.', 't1.xml', None, RuntimeConfig() )
assert len(tL) == 1
cshScriptWriter.writeScript( tL[0], xdb, plat,
                             toolsdir, os.getcwd(), testdir,
                             [], [], 'runscript' )
time.sleep(1)
assert os.path.exists('runscript')
fp = open( 'runscript', 'r' )
for line in fp.readlines():
  sys.stdout.write( line )
