            <rtest name="atest">
              <timeout value=""/>
            </rtest>""" )

        try:
          create_tests( '.', 'bad16.xml', nofltr )
        except TestSpecError: print3( sys.exc_info()[1] )
        else: raise Exception( "expected a TestSpecError exception" )

        util.writefile( 'bad17.xml', """
            <rtest name="atest">
              <timeout value="xyz"/>
            </rtest>""" )

        try:
          create_tests( '.', 'bad17.xml', nofltr )
        except TestSpecError: print3( sys.exc_info()[1] )
        else: raise Exception( "expected a TestSpecError exception" )

        util.writefile( 'bad18.xml', """
            <rtest name="atest">
              <timeout value="-1"/>
            </rtest>""" )

        try:
          create_tests( '.', 'bad18.xml', nofltr )
        except TestSpecError: print3( sys.exc_info()[1] )
        else: raise Exception( "expected a TestSpecError exception" )

        util.writefile( 'ok20.xml', """
            <rtest name="atest">
              <timeout value="240"/>
            </rtest>""" )

        tL = create_tests( '.', 'ok20.xml', nofltr )
