    def test_parameterize_analyze_combinations(self):
        ""
        nofltr = RuntimeConfig( platform_name='dummy' )

        util.writefile( 'ok38.xml', """
            <rtest name="atest">
              <analyze>echo "hello from analyze"</analyze>
            </rtest>""" )

        self.assertRaises( Exception,
                create_tests, '.', 'ok38.xml', nofltr )

        util.writefile( 'ok39.xml', """
            <rtest name="atest">
              <parameterize np="1 4"/>
              <analyze>echo "hello from analyze"</analyze>
            </rtest>""" )

        tL = create_tests( '.', 'ok39.xml', nofltr )
        assert len(tL) == 3
        print3( "with parameterize/analyze 4:", tL )
        assert tL[0].isAnalyze()
        assert tL[0].getAnalyzeScript()
        assert not tL[1].isAnalyze()
        assert not tL[2].isAnalyze()

        util.writefile( 'ok43.xml', """
            <rtest name="atest">
              <parameterize platforms="SunOS" np="1 2"/>
              <parameterize platforms="Linux or tbird" np="1 2 4"/>
            </rtest>""" )

        uf = RuntimeConfig( platform_name='SunOS' )
        tL = create_tests( '.', 'ok43.xml', uf )
        assert len(tL) == 2
        uf = RuntimeConfig( platform_name='Linux' )
        tL = create_tests( '.', 'ok43.xml', uf )
        assert len(tL) == 3
        uf = RuntimeConfig( platform_name='tbird' )
        tL = create_tests( '.', 'ok43.xml', uf )
        assert len(tL) == 3

    def regexes(self, *patterns):
        ""
        rxL = []
        for pat in patterns:
            rxL.append( re.compile( pat, re.IGNORECASE | re.MULTILINE ) )
        return rxL

    def test_using_RuntimeConfig_filtering(self):
        ""
        nofltr = RuntimeConfig( platform_name='dummy' )

        util.writefile( 'regexfile.txt', """
            One line 
            Line Two, then
            line thrEE""" )

        util.writefile( 'ok46.xml', """
            <rtest name="atest">
              <parameterize np="1 4"/>
              <link_files> regexfile.txt </link_files>
            </rtest>""" )

        create_and_search_files( 'ok46.xml', ['*.txt'],
                                 self.regexes('One'), 2 )
        create_and_search_files( 'ok46.xml', ['*.txt'],
                                 self.regexes('three'), 2 )
        create_and_search_files( 'ok46.xml', ['*.txt'],
                                 self.regexes('line two'), 2 )
        create_and_search_files( 'ok46.xml', ['*.txt'],
                                 self.regexes('line one'), 0 )
        create_and_search_files( 'ok46.xml', ['*.txt'],
                                 self.regexes('LINE *THEN'), 0 )
        create_and_search_files( 'ok46.xml', ['*.txt'],
                                 self.regexes('LINE .*THEN'), 2 )
        create_and_search_files( 'ok46.xml', ['*.txt'],
                                 self.regexes('line $'), 2 )
        create_and_search_files( 'ok46.xml', ['*.txt'],
                                 self.regexes('line$'), 0 )
        create_and_search_files( 'ok46.xml', ['*.nun','*.txt'],
                                 self.regexes('LINE .*THEN'), 2 )
        create_and_search_files( 'ok46.xml', ['*.nun','*.two'],
                                 self.regexes('LINE .*THEN'), 0 )
        create_and_search_files( 'ok46.xml', ['*.txt'],
                                 self.regexes('nomatch','LINE .*THEN'), 2 )

        util.writefile( 'ok47.xml', """
            <rtest name="atest">
              <parameterize np="1 4"/>
              <copy_files> regexfile.txt </copy_files>
            </rtest>""" )

        create_and_search_files( 'ok47.xml', ['*.txt'],
                                 self.regexes('One'), 2 )
        create_and_search_files( 'ok47.xml', ['*.txt'],
                                 self.regexes('three'), 2 )
        create_and_search_files( 'ok47.xml', ['*.txt'],
                                 self.regexes('line two'), 2 )
        create_and_search_files( 'ok47.xml', ['*.txt'],
                                 self.regexes('line one'), 0 )
        create_and_search_files( 'ok47.xml', ['*.txt'],
                                 self.regexes('LINE *THEN'), 0 )
        create_and_search_files( 'ok47.xml', ['*.txt'],
                                 self.regexes('LINE .*THEN'), 2 )
        create_and_search_files( 'ok47.xml', ['*.txt'],
                                 self.regexes('line $'), 2 )
        create_and_search_files( 'ok47.xml', ['*.txt'],
                                 self.regexes('line$'), 0 )
        create_and_search_files( 'ok47.xml', ['*.nun','*.txt'],
                                 self.regexes('LINE .*THEN'), 2 )
        create_and_search_files( 'ok47.xml', ['*.nun','*.two'],
                                 self.regexes('LINE .*THEN'), 0 )
        create_and_search_files( 'ok47.xml', ['*.txt'],
                                 self.regexes('nomatch','LINE .*THEN'), 2 )

        util.writefile( 'ok48.xml', """
            <rtest name="atest">
              <parameterize np="1 4"/>
              <copy_files> noexist.txt </copy_files>
            </rtest>""" )

        create_and_search_files( 'ok48.xml', ['*.txt'],
                                 self.regexes('One'), 0 )

        util.writefile( 'ok49.xml', """
            <rtest name="regexfile">
              <parameterize np="1 4"/>
              <copy_files> $NAME.txt </copy_files>
            </rtest>""" )

        create_and_search_files( 'ok49.xml', ['*.txt'],
                                 self.regexes('One'), 2 )

        util.writefile( 'ok50.xml', """
            <rtest name="regex">
              <parameterize np="1 4"/>
              <copy_files> ${NAME}file.txt </copy_files>
            </rtest>""" )

        create_and_search_files( 'ok50.xml', ['*.txt'],
                                 self.regexes('One'), 2 )

    def test_file_globbing_and_source_file_specification(self):
        ""
        nofltr = RuntimeConfig( platform_name='dummy' )

        util.writefile( 'globfile1.txt', """
            a file""" )

        util.writefile( 'globfile2.txt', """
            a second file""" )

        util.writefile( 'link_glob.txt', """
            a file for linking""" )

        util.writefile( 'link2_glob.txt', """
            another file for linking""" )

        util.writefile( 'conditional_glob.txt', """
            a file for linking""" )

        util.writefile( 'notme_glob.txt', """
            some other file""" )

        util.writefile( 'ok51.xml', """
            <rtest name="glob">
              <parameterize np="1"/>
              <glob_copy> glob*.txt </glob_copy>
              <glob_link> link*_${NAME}.txt </glob_link>
              <glob_link parameters="np=1"> conditional*_glob.txt </glob_link>
              <glob_link parameters="np=4"> notme*_glob.txt </glob_link>
            </rtest>""" )

        tL = create_tests( '.', 'ok51.xml', nofltr )
        assert len(tL) == 1
        L = tL[0].getCopyFiles() ; L.sort()
        assert L == [('glob*.txt',None)]
        L = tL[0].getLinkFiles() ; L.sort()
        assert L == [ ('conditional*_glob.txt',None),
                      ('link*_glob.txt',None),
                      ('ok51.xml',None) ]

        util.writefile( 'baseline_glob.txt', """
            some other file""" )

        util.writefile( 'ok52.xml', """
            <rtest name="srcfiles">
              <parameterize np="1"/>
              <glob_copy> glob*.txt </glob_copy>
              <copy_files> link_glob.txt </copy_files>
              <link_files> globfile2.txt </link_files>
              <baseline file="baseline_glob.txt" destination="baseline_glob.base_txt"/>
              <source_files> notme*_glob.txt cond*_glob.txt </source_files>
            </rtest>""" )

        tL = create_tests( '.', 'ok52.xml', nofltr )
        assert len(tL) == 1
        L = tL[0].getSourceFiles() ; L.sort()
        assert L == ['baseline_glob.base_txt', 'cond*_glob.txt',
                     'glob*.txt', 'globfile2.txt', 'link_glob.txt',
                     'notme*_glob.txt', 'ok52.xml']

        util.writefile( 'bad31.xml', """
            <rtest name="badglob">
              <parameterize np="1"/>
              <source_files parameters="np=1"> glob*.txt </source_files>
            </rtest>""" )

        try: create_tests( '.', 'bad31.xml', nofltr )
        except TestSpecError: print3( sys.exc_info()[1] )
        else: raise Exception( "expected a TestSpecError exception" )


#####################################################################

def create_tests( rootpath, relpath, rtconfig ):
    ""
    creator = TestCreator( rtconfig )
    tL = creator.fromFile( rootpath, relpath, None )
    # magic: add stage to this
    sortL = [ (ts.getExecuteDirectory_magik(),ts) for ts in tL ]
    sortL.sort()
    tL = [ T[1] for T in sortL ]
    return tL


def reparse_test( testobj, rtconfig ):
    ""
    creator = TestCreator( rtconfig )
    creator.reparse( testobj )


def paramGather(testL):
    """
    Gathers a list of parameter values for a list of TestSpec objects.
    """
    pL = []
    for t in testL:
        tmp = []
        parms = t.getParameters()
        for (n,v) in parms.items():
            tmp.append( n+'='+v )
        tmp.sort()
        pL.append( '.'.join(tmp) )
    pL.sort()
    return pL


def create_and_eval_option_expr( filename, options, boolean_result ):
    ""
    rtcfg = RuntimeConfig( option_list=options )
    tL = create_tests( '.', filename, rtcfg )
    assert len(tL) == 1
    exprL = tL[0].getOptionEnableExpressions()
    assert len(exprL) == 1
    assert rtcfg.evaluate_option_expr( exprL[0] ) == boolean_result


def create_test_and_eval_platform_expr( filename, platname, boolean_result,
                                        platform_expr=None,
                                        option_list=None ):
    ""
    rtcfg = RuntimeConfig( platform_name=platname,
                           set_platform_expr=platform_expr,
                           option_list=option_list )
    tL = create_tests( '.', filename, rtcfg )

    exprL = tL[0].getPlatformEnableExpressions()
    pev = PlatformEvaluator( exprL )
    pval = rtcfg.evaluate_platform_include( pev.satisfies_platform )

    if option_list != None:
        exprL = tL[0].getOptionEnableExpressions()
        if len( exprL ) == 1:
            oval = rtcfg.evaluate_option_expr( exprL[0] )
        else:
            assert len(exprL) == 0
            oval = True

        assert ( pval and oval ) == boolean_result

    else:
        assert pval == boolean_result


def create_and_search_files( filename, globlist, regexes, test_count ):
    ""
    rtcfg = RuntimeConfig( search_file_globs=globlist,
                           search_regexes=regexes )

    tL = create_tests( '.', filename, rtcfg )

    cnt = 0

    for tspec in tL:
        if rtcfg.file_search( tspec ):
            cnt += 1

    assert cnt == test_count


