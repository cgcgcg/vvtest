class mrgit_configuration_tests( trigutil.trigTestCase ):

    def test_create_config_and_check_layout(self):
        ""
        cfg = mrlib.Configuration()

        man = mrlib.Manifests()
        man.addRepo( 'cool', 'cool', 'cool' )
        man.addRepo( 'cool', 'ness', 'cool/ness' )
        cfg.setManifests( man )

        cfg.setRepoURL( 'cool', '/my/cool.git' )
        cfg.setRepoURL( 'ness', '/theirs/ness.git' )

        repos = list( cfg.getLayout() )
        assert len( repos ) == 2
        assert list( repos[0] ) == [ '/my/cool.git', '.' ]
        assert list( repos[1] ) == [ '/theirs/ness.git', 'ness' ]

    def test_create_config_from_a_single_url(self):
        ""
        cfg = mrlib.create_config_from_url_list( [ 'file:///one/repo.git' ] )

        repos = cfg.getLayout()
        assert len( repos ) == 1
        assert list( repos[0] ) == [ 'file:///one/repo.git', '.' ]
        assert cfg.getRootDir() == 'repo'

    def test_create_config_from_two_urls(self):
        ""
        cfg = mrlib.create_config_from_url_list( [ 'file:///one/repo.git',
                                                   'ssh:///and/two.git' ] )

        repos = cfg.getLayout()
        assert len( repos ) == 2
        assert list( repos[0] ) == [ 'file:///one/repo.git', '.' ]
        assert list( repos[1] ) == [ 'ssh:///and/two.git', 'two' ]
        assert cfg.getRootDir() == 'repo'

    def test_write_manifests_file(self):
        ""
        cfg = mrlib.create_config_from_url_list( [ 'file:///one/repo.git',
                                                   'ssh:///and/two.git' ] )

        with open( 'mfests', 'w' ) as fp:
            cfg.writeManifestsToFile( fp )

        assert len( util.grepfiles( 'group repo', 'mfests' ) ) == 1
        assert len( util.grepfiles( 'repo=repo', 'mfests' ) ) == 1
        assert len( util.grepfiles( 'repo=two', 'mfests' ) ) == 1

    def test_write_config_file(self):
        ""
        cfg = mrlib.create_config_from_url_list( [ 'file:///one/repo.git',
                                                   'ssh:///and/two.git' ] )

        with open( 'config', 'w' ) as fp:
            cfg.writeConfigToFile( fp )

        lines = util.grepfiles( 'repo=repo', 'config' )
        assert len( lines ) == 1
        assert 'one/repo.git' in lines[0]

        lines = util.grepfiles( 'repo=two', 'config' )
        assert len( lines ) == 1
        assert 'and/two.git' in lines[0]

    def test_create_initial_mrgit_repository(self):
        ""
        cfg = mrlib.create_config_from_url_list( [ 'file:///one/repo.git',
                                                   'ssh:///and/two.git' ] )

        mrlib.create_mrgit_repository( 'my_mrgit', cfg )

        git = GitInterface( 'my_mrgit', 'checkrepo' )
        assert os.path.isfile( 'checkrepo/manifests' )
        assert not os.path.isfile( 'checkrepo/config' )

        assert 'mrgit_config' in git.listRemoteBranches()
        git.checkoutBranch( 'mrgit_config' )
        assert os.path.isfile( 'checkrepo/config' )


